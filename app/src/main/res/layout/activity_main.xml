<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/green"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="LOG IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        app:layout_constraintTop_toBottomOf="@id/main_text"
        app:layout_constraintStart_toStartOf="@id/main_text"
        app:layout_constraintEnd_toEndOf="@id/main_text"
        android:layout_marginTop="40dp"
        android:id="@+id/image_sova"
        android:src="@drawable/ic_sova"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/second_text"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/image_sova"
        app:layout_constraintStart_toStartOf="@id/image_sova"
        app:layout_constraintTop_toBottomOf="@+id/image_sova"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="45sp"
        android:text="Trivia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/face_book"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="@id/second_text"
        app:layout_constraintStart_toStartOf="@id/second_text"
        app:layout_constraintTop_toBottomOf="@+id/second_text"
        android:textSize="17sp"
        android:text="Log in with Facebook"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/third_text"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/face_book"
        app:layout_constraintStart_toStartOf="@id/face_book"
        app:layout_constraintTop_toBottomOf="@id/face_book"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:text="-----   OR   -----"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/forth_text"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/third_text"
        app:layout_constraintStart_toStartOf="@id/third_text"
        app:layout_constraintTop_toBottomOf="@id/third_text"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Up with Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/forth_text"
        app:layout_constraintStart_toStartOf="@id/forth_text"
        app:layout_constraintTop_toBottomOf="@id/forth_text"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="GAME NOW"
        android:backgroundTint="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>